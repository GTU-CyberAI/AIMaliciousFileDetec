{
    "name": "exe-analyzer-app",
    "version": "1.0.0",
    "description": "Electron app to analyze files using a Python script",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "author": "Celiks",
    "license": "MIT",
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "appId": "com.cse470.exeanalyzer",
        "productName": "Malicious File Analyzer",
        "files": [
            "**/*"
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
